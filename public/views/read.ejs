<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
   
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <a class="text-2xl text-blue-500 " href="/">Back To Home</a>
        <h1 class="text-3xl text-white mb-5 mt-10">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length >0){%>
                <% users.forEach(function(user){ %>
                    <div class=" w-72 bg-zinc-800 p-4 rounded-lg">
                        <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-centre" src="<%=user.image %>" alt="">
                        </div>
                        <h3 class="text-2xl tracking-tighter pt-3"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-3 p-6">
                            <a class="text-zinc-300" href="/edit/<%= user._id %>">Edit user</a>
                            <a class="text-zinc-300" href="/delete/<%=user._id %>">Delete user</a>
                        </div>
        
                    </div>
                    
        
                   <%}) %>
                
            <%} else{
            %> 
                <h2 class="text-zinc-500">No Users Yet</h2>
            <%    
                
            }%>
           

        </div>
        
    </div>
</body>
</html>